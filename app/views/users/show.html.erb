<h2 class="text-center mt-4"><%= @user.username %>'s profile</h2>

<div class="container">
  <div class="row justify-content-md-center">
    <div class="card text-center shadow mb-5 bg-white rounded">
      <div class="card-header font-italic">
        <%= gravatar_for @user %>
        <% if logged_in? && @user == current_user %>
          <div class="text-center mt-4">
            <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-info" %>
            <%= link_to "Delete profile", user_path(current_user), class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure?"} %>
          </div>
        <% end %>
      </div>
      <div class="card-footer text-muted">
        Email: <%= @user.email %>
      </div>
    </div>
  </div>
</div>

<h3 class="text-center mt-4">User's articles</h3>

<div class="flickr_pagination">
  <%= will_paginate @articles, :container => false %>
</div>

<%= render 'articles/article' %>

<div class="flickr_pagination mb-4">
  <%= will_paginate @articles, :container => false %>
</div>
